<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注:BaseModle需改成接口对应，basecode同理"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_first"
                style="@style/button_style"
                android:text="网络请求" />

            <Button
                android:id="@+id/btn_second"
                style="@style/button_style"
                android:text="上传图片" />

            <Button
                android:id="@+id/btn_second_2"
                style="@style/button_style"
                android:text="上传文件进度演示" />

            <Button
                android:id="@+id/btn_third"
                style="@style/button_style"
                android:text="MVC请求演示" />

            <Button
                android:id="@+id/btn_forth"
                style="@style/button_style"
                android:text="测试多baseUrl1" />

            <Button
                android:id="@+id/btn_fifth"
                style="@style/button_style"
                android:text="测试多baseUrl2" />

            <Button
                android:id="@+id/btn_six"
                style="@style/button_style"
                android:text="测试多baseUrl3" />

            <Button
                android:id="@+id/btn_down"
                style="@style/button_style"
                android:text="下载文件演示" />


            <Button
                android:id="@+id/myother"
                style="@style/button_style"
                android:text="其他查询" />

            <Button
                android:id="@+id/dataBinding"
                style="@style/button_style"
                android:text="数据绑定" />

            <Button
                android:id="@+id/dataBinding2"
                style="@style/button_style"
                android:text="数据绑定2" />

            <Button
                android:id="@+id/myfirestcode"
                style="@style/button_style"
                android:text="我的第一行代码" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent" />

    </ScrollView>


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
